{
  "pluginAlias": "MyAir",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "address": {
        "title": "Touch Screen IP Address",
        "type": "string",
        "required": true,
        "format": "ipv4"
      },
      "port": {
        "title": "Touch Screen Port",
        "type": "integer",
        "required": true,
        "minimum": 1,
        "maximum": 65535,
        "default": 2025
      }
    }
  }
}